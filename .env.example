# Domain
PAAS_DOMAIN=my.domain.com

# Paths
PAAS_ROOT=/paas
PAAS_APPS_DIR=/paas/apps
PAAS_TEMPLATES_DIR=/paas/templates
PAAS_SCRIPTS_DIR=/paas/scripts
PAAS_SHARED_DIR=/paas/shared

# Portal
PORTAL_PORT=3000
PORTAL_DB_PATH=/paas/portal-data/portal.sqlite3
SESSION_COOKIE_NAME=portal_session
SESSION_TTL_HOURS=168
PORTAL_COOKIE_SECURE=false
BCRYPT_ROUNDS=10
PORTAL_TRUST_PROXY=true

# Container defaults
DEFAULT_MEM_LIMIT=256m
DEFAULT_CPU_LIMIT=0.5
DEFAULT_RESTART_POLICY=unless-stopped

# Docker network
APP_NETWORK=paas-proxy

# App limits
MAX_APPS_PER_USER=5
MAX_TOTAL_APPS=20
